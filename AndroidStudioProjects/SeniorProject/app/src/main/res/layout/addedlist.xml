<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:weightSum="2.50">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.20"
        android:elevation="1dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="EXPENSES"
        android:textColor="#FFFFE082"
        android:textSize="?android:attr/windowTitleSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:orientation="horizontal"
        android:layout_weight="0.10">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Product Exp:"
            android:textColor="#FFFDBEBF"
            android:textSize="?android:attr/listPreferredItemPaddingLeft"
            android:textStyle="bold"
            tools:text="Product Exp:" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#FFE1C2FF"
            android:textSize="?attr/listPreferredItemPaddingLeft"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Product Exp:"
            android:textColor="#FFFDBEBF"
            android:textSize="?attr/listPreferredItemPaddingLeft"
            android:textStyle="bold"
            tools:text="Product Exp:" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#FFE1C2FF"
            android:textSize="?attr/listPreferredItemPaddingRight"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Travel Exp :"
            android:textColor="#FF8D5D15"
            android:textSize="?android:attr/listPreferredItemPaddingLeft"
            android:textStyle="bold"
            tools:text="Travel Exp :" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#FFE1C2FF"
            android:textSize="?attr/listPreferredItemPaddingLeft"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Travel Exp :"
            android:textColor="#FF8D5D15"
            android:textSize="?android:attr/listPreferredItemPaddingLeft"
            android:textStyle="bold"
            tools:text="Travel Exp :" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#FFE1C2FF"
            android:textSize="?attr/listPreferredItemPaddingLeft"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>